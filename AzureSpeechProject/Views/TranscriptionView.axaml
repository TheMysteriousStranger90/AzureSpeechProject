<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AzureSpeechProject.ViewModels"
             xmlns:converters="using:AzureSpeechProject.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AzureSpeechProject.Views.TranscriptionView"
             x:DataType="vm:TranscriptionViewModel">

    <Design.DataContext>
        <vm:TranscriptionViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"
                                         TrueColor="#E32036"
                                         FalseColor="#0078D4" />
        <converters:BoolToIconConverter x:Key="BoolToIconConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Control panel -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,16">
            <!-- Record controls -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <!-- Start Recording Button -->
                <Button Classes="action azure-start"
                        Command="{Binding StartCommand}"
                        IsVisible="{Binding !IsRecording}">
                    <StackPanel>
                        <PathIcon
                            Data="M12,2A3,3 0 0,1 15,5V11A3,3 0 0,1 12,14A3,3 0 0,1 9,11V5A3,3 0 0,1 12,2M19,11C19,14.53 16.39,17.44 13,17.93V21H11V17.93C7.61,17.44 5,14.53 5,11H7A5,5 0 0,0 12,16A5,5 0 0,0 17,11H19Z"
                            Width="16" Height="16" />
                        <TextBlock Text="Start Recording" />
                    </StackPanel>
                </Button>

                <!-- Stop Recording Button -->
                <Button Classes="action azure-stop"
                        Command="{Binding StopCommand}"
                        IsVisible="{Binding IsRecording}">
                    <StackPanel>
                        <PathIcon Data="M18,18H6V6H18V18Z" Width="16" Height="16" />
                        <TextBlock Text="Stop Recording" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Translation controls -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"
                        VerticalAlignment="Center" Spacing="8">
                <Border Background="{DynamicResource AzurePrimaryBlue}" CornerRadius="4" Padding="8,4">
                    <CheckBox IsChecked="{Binding EnableTranslation}" Content="Enable Translation" />
                </Border>

                <ComboBox ItemsSource="{Binding AvailableLanguages}"
                          SelectedItem="{Binding SelectedTargetLanguage}"
                          IsEnabled="{Binding EnableTranslation}"
                          IsVisible="{Binding EnableTranslation}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Output format -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right"
                        VerticalAlignment="Center" Spacing="8">
                <TextBlock Text="Format:" VerticalAlignment="Center" />
                <ComboBox ItemsSource="{Binding OutputFormats}"
                          SelectedItem="{Binding SelectedOutputFormat}" />
            </StackPanel>
        </Grid>

        <!-- Main content area -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Margin="0,8">
            <!-- Original transcription -->
            <Border Grid.Column="0" Classes="transcript-container" Margin="0,0,8,0">
                <Grid RowDefinitions="Auto,*">
                    <Border Grid.Row="0" Classes="transcript-header">
                        <TextBlock Text="Original Speech (English)" />
                    </Border>
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding CurrentTranscript, Mode=OneWay}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Margin="8"
                                 Background="White"
                                 Padding="8"
                                 BorderThickness="0" />
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Translation content -->
            <Border Grid.Column="1" Classes="transcript-container" Margin="8,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <Border Grid.Row="0" Classes="transcript-header">
                        <TextBlock
                            Text="{Binding SelectedTargetLanguage, StringFormat='Translation ({0})', 
                                                     FallbackValue='Translation'}" />
                    </Border>

                    <!-- Translation disabled message -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Spacing="12" IsVisible="{Binding !EnableTranslation}">
                        <PathIcon Data="M12,18H6V14H12M21,14V12L20,7H4L3,12V14H4V20H14V14H18V20H20V14M20,4H4V6H20V4Z"
                                  Width="48" Height="48" Foreground="{DynamicResource AzurePrimaryBlue}" />
                        <TextBlock Text="Translation is disabled" FontWeight="SemiBold" FontSize="18"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Enable translation in the controls above to see real-time translations"
                                   TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                                   Foreground="{DynamicResource SecondaryTextBrush}" />
                    </StackPanel>

                    <!-- Translation content -->
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto" IsVisible="{Binding EnableTranslation}">
                        <TextBox Text="{Binding CurrentTranslation, Mode=OneWay}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Margin="8"
                                 Background="White"
                                 Padding="8"
                                 BorderThickness="0" />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                    Spacing="8" Margin="0,16,0,0">
            <Button Command="{Binding ClearCommand}" IsEnabled="{Binding CanClear}"
                    Classes="action secondary"
                    ToolTip.Tip="Clear all transcription content">
                <StackPanel>
                    <PathIcon Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                              Width="16" Height="16" />
                    <TextBlock Text="Clear" />
                </StackPanel>
            </Button>

            <Button Command="{Binding SaveCommand}" IsEnabled="{Binding CanSave}"
                    Classes="action primary"
                    ToolTip.Tip="Save transcription to file">
                <StackPanel>
                    <PathIcon
                        Data="M17 3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.1 21 21 20.1 21 19V7L17 3ZM19 19H5V5H16.17L19 7.83V19ZM12 12C10.34 12 9 13.34 9 15C9 16.66 10.34 18 12 18C13.66 18 15 16.66 15 15C15 13.34 13.66 12 12 12ZM7 7H15V9H7V7Z"
                        Width="16" Height="16" />
                    <TextBlock Text="Save" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Recording indicator overlay -->
        <Border Grid.Row="0" Grid.RowSpan="3" Background="{DynamicResource RecordingOverlayBrush}"
                IsVisible="{Binding IsRecording}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <Ellipse Width="16" Height="16" Fill="{DynamicResource AzureRed}" Classes="recording-pulse" />
                <TextBlock Text="Recording in progress..." Foreground="White" FontWeight="SemiBold" />
                <Button Command="{Binding StopCommand}" Classes="action azure-stop">
                    <StackPanel>
                        <PathIcon Data="M18,18H6V6H18V18Z" Width="16" Height="16" />
                        <TextBlock Text="Stop Recording" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>